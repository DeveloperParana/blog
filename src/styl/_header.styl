html,
body
	height 100%

$bg
	background url(../img/background.jpg)
	background-size cover 
	height 100%

	.content
		width 95%
		align(both)
		text-align center

// Header home
.header-site
	@extends $bg
	
	h1,
	h3
		color: $secondary
		text-align center
	
	.site-title
		font-size rem(55px)
		line-height 1
		margin-top -80px
		display block
	
		+above(cut)
			margin-bottom 0
			font-size rem(100px)
	
	.site-description
		font-size rem(18px)
		font-weight 300
		display block
		margin rem(15px) 0 rem(30px) 0
	
		+above(cut)
			font-size rem(40px)

// Header Post
.header-post
	@extends $bg
	
	.content
	
		+above(cut)
			center(1000px)
	
	.subheader
		display table
		padding 20px
	
		a
			border 2px solid sec
			border-radius 20px
			padding 0 10px
	
			+above(cut)
				padding 0 10px

	.date
		mainFont(300)
		font-size rem(16px)
	
	h1
		text-transform uppercase
		font-size rem(30px)
		margin 0 0 30px
	
		+above(cut)
			font-size rem(60px)
	
	.subtitle
		mainFont(300)
		font-size rem(20px)
	
	h1,
	.subtitle, 
	.date
		color $secondary
		text-align center

	p
		color $secondary
		text-decoration none
		mainFont(300)
		font-size rem(18px)